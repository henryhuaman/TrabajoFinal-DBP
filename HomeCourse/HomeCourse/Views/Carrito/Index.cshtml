@model IEnumerable<HomeCourse.Models.CarritoDeCompras>
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{  
    Layout = ViewBag.Layout;
}
<html>
<head>

</head>

<body class="p-10">

    <div class="max-w-xl mx-auto">

        <h1 class="text-2xl font-bold mb-4">Carrito de Compras</h1>
        @foreach (var item in Model)
        {
            <div class="flex items-center justify-between border-b border-gray-300 py-2">
                <div class="flex items-center">
                    <img src="https://via.placeholder.com/50" alt="Producto" class="mr-2">
                    <span>Curso</span>
                </div>
                <div>
                    <span >@item.NomCur</span>
                </div>
                <div>
                    <span>@item.CateCur</span>
                </div>
                <div>
                    <a asp-action="Quitar" asp-route-id="@item.CodCur" class="mt-4 bg-red-500 hover:bg-red-700 text-white font-bold py-2 px-4 rounded">Quitar</a>
                </div>
            </div>
        }


        <!-- Total -->
        <div class="mt-4">
            <span class="font-bold">Total a Pagar: @ViewData["Monto"]</span>
        </div>

        <!-- Botón de Compra -->
        <form asp-action="Comprar" method="post">
        <button type="submit" class="mt-4 bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded">Comprar</button>
        </form>
    </div>  

</body>
</html>