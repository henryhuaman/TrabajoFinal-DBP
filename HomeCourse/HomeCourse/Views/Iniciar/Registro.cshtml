@{
}
<html>
<body class="bg-gray-100">
    <form asp-controller="Iniciar" asp-action="Registro" method="post">
        <div class="flex items-center justify-center min-h-screen">
            <div class="w-full max-w-md">
                <div class="form-group">
                    <h2 class="text-2xl font-bold text-center mb-6">REGISTRARSE</h2>
                    <label for="nombre" class="block text-gray-600 text-sm font-bold mb-2">Nombre Completo:</label>
                    <input asp-for="Nombre" class="appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" id="formGroupExampleInput2" placeholder="Nombre">
                    <span asp-validation-for="Nombre" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label for="Dni" class="block text-gray-600 text-sm font-bold mb-2">DNI:</label>
                    <input asp-for="Dni" class="appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" id="formGroupExampleInput2" placeholder="DNI">
                    <span asp-validation-for="Dni" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label for="Correo" class="block text-gray-600 text-sm font-bold mb-2">Correo lectrónico:</label>
                    <input asp-for="Correo" class="appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" id="formGroupExampleInput2" placeholder="Email">
                    <span asp-validation-for="Correo" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label for="Contraseña" class="block text-gray-600 text-sm font-bold mb-2">Contraseña:</label>
                    <input asp-for="Contraseña" class="appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" id="formGroupExampleInput2" placeholder="Password">
                    <span asp-validation-for="Contraseña" class="text-danger"></span>
                </div>
                <div class="mb-4 text-center">
                    <button class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline w-full" type="submit">
                        REGISTRARSE
                    </button>
                </div>
            </div>
        </div>
    </form>
</body>
</html>
