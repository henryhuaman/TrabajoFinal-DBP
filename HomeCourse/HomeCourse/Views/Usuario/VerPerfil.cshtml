@{
}


<html>

<head>
    <title>Perfil de Usuario</title>
</head>

<body class="bg-gray-100 font-sans">
    <div class="min-h-screen flex items-center justify-center bg-gray-100">
        <div class="bg-white rounded-lg shadow-md p-8 max-w-md mx-auto">
            <h1 class="text-3xl font-semibold mb-6">Perfil de Usuario</h1>
            <div class="mb-4">
                <div class="text-gray-600">Nombre:</div>
                <div class="text-2xl font-semibold">@Model.Nombre</div>
            </div>
            <div class="mb-4">
                <div class="text-gray-600">Teléfono:</div>
                <div class="text-2xl font-semibold">@Model.Correo</div>
            </div>
            <div class="mb-4">
                <div class="text-gray-600">Correo:</div>
                <div class="text-2xl font-semibold">@Model.Dni</div>
            </div>
            
            <a asp-action="Edit" class="block bg-blue-500 hover:bg-blue-700 text-white font-semibold py-2 px-4 rounded text-center">
                Editar
            </a>
        </div>
    </div>
</body>

</html>
