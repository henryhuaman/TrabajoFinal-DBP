@model HomeCourse.Models.Curso
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    Layout = "_LayoutProfesor";
}
<html>
<body>
    <form asp-controller="Administrador" asp-action="Grabar_Curso" method="post">
        <div class="form-group">
            <label for="formGroupExampleInput2">Nombre:</label>
            <input asp-for="Nombre" class="form-control" id="formGroupExampleInput2" placeholder="NOMBRE">
            <span asp-validation-for="Nombre" class="text-danger"></span>

        </div>
        <div class="form-group">
            <label for="formGroupExampleInput2">Descripcion:</label>
            <input asp-for="Descripcion" class="form-control" id="formGroupExampleInput2" placeholder="DESCRIPCION">
            <span asp-validation-for="Descripcion" class="text-danger"></span>

        </div>
        <div class="form-group">
            <label for="formGroupExampleInput2">Categoria:</label>
            <input asp-for="Categoria" class="form-control" id="formGroupExampleInput2" placeholder="CATEGORIA">
            <span asp-validation-for="Categoria" class="text-danger"></span>

        </div>
        <div class="form-group">
            <label for="formGroupExampleInput2">Precio:</label>
            <input asp-for="Precio" class="form-control" id="formGroupExampleInput2" placeholder="PRECIO">
            <span asp-validation-for="Precio" class="text-danger"></span>
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-primary" value="btn" name="grabar" data-toggle="modal" data-target="#exampleModal">Grabar</button>
        </div>
    </form>
</body>
</html>