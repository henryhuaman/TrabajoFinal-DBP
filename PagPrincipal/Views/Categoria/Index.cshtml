@{
}

<html>
    <head>

    </head>
    <body>

    <div><h1 class="text-6xl">@ViewData["Categoria"]</h1></div>

    <div class="container mx-auto p-8 flex flex-col space-y-4">
        @foreach (var curs in Model)
        {
            <div class="grid grid-cols-2 bg-white p-6 rounded shadow-lg mb-4">
                <div><img src="https://static.mercadonegro.pe/wp-content/uploads/2021/02/23133540/curso-on-line.png" alt="Imagen 1" class="rounded-lg inline-block object-scale-down h-48 w-96" /></div>
                <div>
                    <h3 class="text-2xl font-bold">@curs.NomCur</h3>
                    <h3 class="text-xl">@curs.CateCur</h3>
                    
                    <button onclick="toggleModal()" class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded">Mostrar Pestaña Emergente</button>
                    <div id="modal" class="fixed inset-0 flex items-center justify-center z-50 hidden">
                        <div class="modal-container bg-white w-11/12 md:max-w-md mx-auto rounded shadow-lg z-50 overflow-y-auto">
                            <div class="modal-content py-4 text-left px-6">
                                <div class="flex justify-between items-center pb-3">
                                    <p class="text-2xl font-bold">Pestaña Emergente</p>
                                    <button onclick="toggleModal()" class="focus:outline-none">
                                        <svg class="h-6 w-6 text-black" role="button" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20">
                                            <title>Close</title>
                                            <path fill="#000000" d="M14.348,14.849c-0.195,0.195-0.451,0.293-0.707,0.293s-0.512-0.098-0.707-0.293l-3.641-3.641l-3.641,3.641 c-0.391,0.391-1.023,0.391-1.414,0s-0.391-1.023,0-1.414l3.641-3.641l-3.641-3.641c-0.391-0.391-0.391-1.023,0-1.414s1.023-0.391,1.414,0 l3.641,3.641l3.641-3.641c0.391-0.391,1.023-0.391,1.414,0s0.391,1.023,0,1.414l-3.641,3.641l3.641,3.641 C14.537,13.827,14.537,14.458,14.348,14.849z" />
                                        </svg>
                                    </button>
                                </div>
                                <div class="my-5">
                                    Contenido de la pestaña emergente
                                </div>
                            </div>
                        </div>
                    </div>
                    
                </div>
            </div>
        }
    </div>
        
    <div class="container mx-auto p-8">
        <h1 class="text-2xl font-bold mb-8">Descubre miles de cursos en línea</h1>

        <!-- Ejemplo de tarjeta de curso -->
        <div class="bg-white p-6 rounded shadow-lg mb-4">
            <h2 class="text-xl font-bold mb-2">Curso de Desarrollo Web</h2>
            <p class="text-gray-700 mb-2">Aprende a crear sitios web desde cero.</p>
            <span class="text-blue-500 font-bold">$19.99</span>
        </div>

        <div class="bg-white p-6 rounded shadow-lg mb-4">
            <h2 class="text-xl font-bold mb-2">Curso de Marketing Digital</h2>
            <p class="text-gray-700 mb-2">Domina las estrategias de marketing en línea.</p>
            <span class="text-blue-500 font-bold">$29.99</span>
        </div>
    </body>
</html>
<script>
    function toggleModal() {
        var modal = document.getElementById("modal");
        modal.classList.toggle("hidden");
    }
</script>
