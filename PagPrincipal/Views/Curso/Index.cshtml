<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.7/dist/tailwind.min.css" rel="stylesheet">
    <title>Your Form</title>
</head>
<body class="bg-gray-100">

    <div class="container mx-auto mt-10">
        <form action="/Curso/Grabar" method="post" class="bg-white shadow-md rounded px-8 pt-6 pb-8 mb-4">
            <div class="mb-4">
                <label for="CodCur" class="block text-gray-700 text-sm font-bold mb-2">Id</label>
                <input type="text" name="CodCur" id="CodCur" placeholder="Id" class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline">
                <span class="text-red-500 text-xs italic"></span>
            </div>
            <div class="mb-4">
                <label for="NomCur" class="block text-gray-700 text-sm font-bold mb-2">Nombre del curso</label>
                <input type="text" name="NomCur" id="NomCur" placeholder="Nombre del curso" class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline">
                <span class="text-red-500 text-xs italic"></span>
            </div>
            <div class="mb-4">
                <label for="DesCur" class="block text-gray-700 text-sm font-bold mb-2">Descripcion del curso</label>
                <input type="text" name="DesCur" id="DesCur" placeholder="Descripción del curso" class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline">
                <span class="text-red-500 text-xs italic"></span>
            </div>
            <div class="mb-4">
                <label for="CateCur" class="block text-gray-700 text-sm font-bold mb-2">Categoria</label>
                <input type="text" name="CateCur" id="CateCur" placeholder="Categoria del curso" class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline">
                <span class="text-red-500 text-xs italic"></span>
            </div>
            <div class="mb-6">
                <label for="PreCur" class="block text-gray-700 text-sm font-bold mb-2">Precio del Curso</label>
                <input type="number" name="PreCur" id="PreCur" placeholder="Precio del curso" class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline">
                <span class="text-red-500 text-xs italic"></span>
            </div>
            <div class="mb-6">
                <label for="CodPro" class="block text-gray-700 text-sm font-bold mb-2">Profesor del Curso</label>
                <input type="text" name="CodPro" id="CodPro" placeholder="Profesor del Curso" class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline">
                <span class="text-red-500 text-xs italic"></span>
            </div>
            <div class="flex items-center justify-between">
                <button type="submit" name="grabar" value="btn" data-toggle="modal" data-target="#exampleModal" class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline">
                    Grabar
                </button>
            </div>
        </form>
    </div>

</body>
</html>
